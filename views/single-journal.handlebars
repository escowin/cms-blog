{{! custom stylesheet }}
<link rel="stylesheet" href="/css/single-journal.css" />

{{#if loggedIn}}
<script defer src="/javascript/add-entry.js"></script>
{{/if}}

<section>
  {{> journal-info journal}}
</section>

{{!-- entry form --}}
{{#if loggedIn}}
  <form id="entry-form">
    <h3>Log new entry</h3>

    <div id="entry-year">
        <label for="year">year</label>
        <input name="date" id="year" placeholder="yyyy" type="number" min="0000" max="{{ current_year }}" />
    </div>

    <div id="entry-month">
      <label for="month">month</label>
      <input name="date" id="month" placeholder="mm" type="number" min="01" max="12" />
    </div>

    <div id="entry-date">
      <label for="date">day</label>
      <input name="date" id="date" placeholder="dd" type="number" min="01" max="31" />
    </div>

    <div id="entry-weight">
      <label for="weight">weight</label>
      <input name="weight" type="number" max="999.9" step="0.1" />
    </div>

    <div id="entry-text">
      <label for="text">notes</label>
      <textarea name="entry-text" id="text"></textarea>
    </div>

    <button type="submit" class="btn add-btn">+ entry</button>
  </form>
{{/if}}

{{!-- partial | entries.handlebars--}}
<section>
  {{> entries journal.entries }}
</section>
