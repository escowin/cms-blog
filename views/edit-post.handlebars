<script defer src="/javascript/edit-post.js"></script>
<script defer src="/javascript/delete-post.js"></script>
<script defer src="/javascript/comment.js"></script>

<article>
    <a href="/dashboard"> &larr; Dashboard</a>
    <h2>Edit post</h2>
    <form id="edit-post-form">
        <div class="wrapper">
            <label for="post-title">title</label>
            <input name="post-title" type="text" value="{{post.title}}"/>
        </div>
        <div>
            <label for="post-content">text</label>
            <textarea id="post-content" name="post-content"></textarea>
        </div>
        <div>
            by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <div class="buttons-wrapper">
            <button type="submit" class="btn add-btn" id="save-btn">Save post</button>
            <button type="button" class="btn" id="delete-btn">Delete post</button>
        </div>
    </form>
</article>

<form id="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>
    <div>
        <button type="submit" class="btn add-btn">Add comment</button>
    </div>
</form>

{{!-- renders partial --}}
{{> comments post.comments }}