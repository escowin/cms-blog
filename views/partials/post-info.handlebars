<article class="post">
  <h3 class="title">
    <a href="/post/{{id}}">{{title}}</a>
  </h3>

  <div class="details">
    <p class="author">
      posted by
      {{user.username}}
      &#183;
      {{format_date created_at}}
    </p>
    <a href="/post/{{id}}">
      {{comments.length}}
      {{format_plural "comment" comments.length}}
    </a>
  </div>
  
  <div class="content">
    <p>{{content}}</p>
  </div>
</article>